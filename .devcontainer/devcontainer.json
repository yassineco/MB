{
  "name": "Magic Button DevContainer",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:18",
  
  "features": {
    "ghcr.io/devcontainers/features/google-cloud-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/terraform:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "dockerDashComposeVersion": "v2"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "ms-vscode.vscode-json",
        "GoogleCloudTools.cloudcode",
        "hashicorp.terraform",
        "ms-playwright.playwright",
        "orta.vscode-jest",
        "formulahendry.auto-rename-tag",
        "christian-kohler.path-intellisense",
        "streetsidesoftware.code-spell-checker",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml"
      ],
      "settings": {
        "typescript.preferences.useAliasesForRenames": false,
        "typescript.updateImportsOnFileMove.enabled": "always",
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit",
          "source.organizeImports": "explicit"
        },
        "files.exclude": {
          "**/node_modules": true,
          "**/dist": true,
          "**/.next": true
        },
        "search.exclude": {
          "**/node_modules": true,
          "**/dist": true,
          "**/.next": true
        }
      }
    }
  },

  "forwardPorts": [8080, 3000, 5173],
  "portsAttributes": {
    "8080": {
      "label": "Backend API",
      "onAutoForward": "notify"
    },
    "3000": {
      "label": "Extension Dev Server",
      "onAutoForward": "ignore"
    },
    "5173": {
      "label": "Vite Dev Server",
      "onAutoForward": "ignore"
    }
  },

  "postCreateCommand": "npm run install:all",
  "postStartCommand": "gcloud auth application-default login --no-launch-browser || true",

  "mounts": [
    "source=${localEnv:HOME}/.config/gcloud,target=/home/vscode/.config/gcloud,type=bind,consistency=cached"
  ],

  "remoteEnv": {
    "GOOGLE_APPLICATION_CREDENTIALS": "/home/vscode/.config/gcloud/application_default_credentials.json"
  },

  "containerEnv": {
    "NODE_ENV": "development"
  }
}