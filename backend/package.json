{
  "name": "magic-button-backend",
  "version": "1.0.0",
  "description": "Magic Button API Backend - Cloud Run + Vertex AI",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/server.ts",
    "build": "tsc -p tsconfig.prod.json",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:api": "jest api.test.ts",
    "test:genai": "jest genai.test.ts",
    "test:rag": "jest rag.test.ts",
    "test:translation": "jest translation.test.ts",
    "test:integration": "jest integration.test.ts",
    "test:security": "jest security.test.ts",
    "test:all": "./run-tests.sh",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t magic-button-api .",
    "docker:run": "docker run -p 8080:8080 --env-file .env magic-button-api",
    "deploy": "gcloud run deploy magic-button-api --source . --region europe-west1 --allow-unauthenticated"
  },
  "keywords": [
    "fastify",
    "typescript",
    "vertex-ai",
    "gcp",
    "cloud-run"
  ],
  "author": "Yassine",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@google-cloud/firestore": "^7.1.0",
    "@google-cloud/secret-manager": "^5.0.1",
    "@google-cloud/storage": "^7.7.0",
    "@google-cloud/vertexai": "^1.4.0",
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.12.2",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "fastify": "^4.24.3",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
